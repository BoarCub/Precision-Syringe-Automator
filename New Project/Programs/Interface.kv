# InterfaceManager acts as a container for all of the Screens in the app
InterfaceManager:
    StartScreen:
    RoutineCreatorScreen:
        
        id: routine_creator_screen
    
# The first menu that
<StartScreen>:
    name: "Start Screen"
    Label:
        text: "Precision Syringe\nAutomator"
        pos_hint: {'center_x': .5, 'center_y': 0.8}
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        font_size: '60sp'
        font_name: 'Corbel'
        
    BoxLayout:
        size_hint: .5, None
        pos_hint: {'center_x': .5}
        orientation: 'vertical'
        Button: #Create New Routine Button
            text: "Create New Routine"
            on_release: app.root.current = "Routine Creator Screen"

# This screen allows a user to create a new routine
<RoutineCreatorScreen>:
    name: "Routine Creator Screen"
    
    # Static Layout Showing the Titles of Each Column
    BoxLayout:
        orientation: 'horizontal'
        pos_hint: {'center_x': .5, 'center_y': .95}
        Label:
            text: "[u]Task Number:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "[u]Input Valve:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "[u]Output Valve:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "[u]Mode:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "[u]Value:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
        Label:
            text: "[u]Speed:[/u]"
            markup: True
            halign: 'left'
            font_size: '20sp'
            
    BoxLayout:
        id: actions_box
        orientation: 'vertical'
        size_hint: 1, 0.7
        pos_hint: {'center_x': .5, 'center_y': .55}
        
        BoxLayout:
            orientation: 'horizontal'
            id: 1
            Button:
        BoxLayout:
            orientation: 'horizontal'
            id: 2
        BoxLayout:
            orientation: 'horizontal'
            id: 3
        BoxLayout:
            orientation: 'horizontal'
            id: 4
        BoxLayout:
            orientation: 'horizontal'
            id: 5
        BoxLayout:
            orientation: 'horizontal'
            id: 6
        BoxLayout:
            orientation: 'horizontal'
            id: 7
        BoxLayout:
            orientation: 'horizontal'
            id: 8
        BoxLayout:
            orientation: 'horizontal'
            id: 9
        BoxLayout:
            orientation: 'horizontal'
            id: 10
        BoxLayout:
            orientation: 'horizontal'
            id: position_11

    BoxLayout:
        size_hint: .5, .1
        pos_hint: {'center_x': .5}
        orientation: 'vertical'
        Button:
            text: "Add Action"
            on_release: root.addAction()            
        Button: #Goes Back to StartScreen
            text: "Back"
            on_release: app.root.current = "Start Screen"